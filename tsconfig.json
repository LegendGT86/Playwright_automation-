{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",

    "baseUrl": "./",
    "paths": {
      "pages/*": ["pages/*"],
      "tests/*": ["tests/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "pages/**/*.ts",
    "utils/**/*.ts"
  ]
}
